<!DOCTYPE html>
<html>
  <head>
    <title>RailsRecipes</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  </head>

  <body>

    <% if notice or alert  %>
      <div class="popup-notication">
          <div class="popup-content-notice">
            <span class="material-symbols-outlined">task_alt</span>
            <p>
                <p class="notice"><%= notice %></p>
            </p>
          </div> 
          <div class="popup-content-alert">
            <span class="material-symbols-outlined">info</span>
            <p>
                <p class="alert"><%= alert %></p>
            </p>
          </div>         
      </div>
      
    <% end %>
    <header>
      <h1>rails recipes</h1>
      <nav>
        <a href="/">Home</a>
        <a href=<%= food_index_path %>>Foods</a>
        <a href="#">Recipes</a>
        <a href="#">Inventory</a>
        <a href="#">Log Out</a>
        <a href="#">Log In</a>
        <a href="#">Sign Up</a>
      </nav>
      <div class="profile">
        <%= current_user.email %>
      </div>
    </header>
    <main>
      <%= yield %>
    </main>
    <script>
      let notication = document.querySelector('.popup-notication');
      setTimeout(() => {
        notication.style.visibility = 'hidden';
      }, 3000);
    </script>
  </body>
</html>
