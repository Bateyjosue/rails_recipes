<div class="public-recipe">
  <h2 class="section-title">Public Recipe</h2>
  <ul>
    <% @recipes.each do |recipe| %>
      <li class="m-8">

        <div class="ml-4 md:flex md:flex-row border-black border-4 p-4">
          <div class="md:w-1/4 font-medium ">
            <h2 class="text-2xl text-gray-900">
              <a href="/recipes/<%= recipe.id %>"> <%= recipe.name %> </a>
            </h2>
              By: <span class="author-name"><%= recipe.user.name %></span>
          </div>
          <div class="md:w-3/4 items-end justify-end text-sm">
            <p class="text-gray-500 ml-4"> <%= recipe.description %> </p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>